{% extends "base.twig" %}

{% block content %}

    <div class="container-fluid max-width my-4">
        <div class="row">
            <div class="col-12">
                <h1>{{ post.title }}</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-12 col-md-6">
                {% filter shortcodes %}

                    [advanced_form form="form_5da5852282c73"]

                {% endfilter %}
            </div>
            <div class="col-12 col-md-6">
                {{ post.content }}
            </div>
        </div>
    </div>

    {% if options.google_maps_location %}

        <div class="google-map__wrapper">
            <iframe width='100%' height='100%' id='mapcanvas' src='https://maps.google.com/maps?q={{ options.google_maps_location }}&amp;t=&amp;z=10&amp;ie=UTF8&amp;iwloc=&amp;output=embed' frameborder='0' scrolling='no' marginheight='0' marginwidth='0'>
                <div style='overflow:hidden;'>
                    <div id='gmap_canvas' style='height:100%;width:100%;'></div>
                </div>
            </iframe>
        </div>

    {% endif %}

{% endblock %}